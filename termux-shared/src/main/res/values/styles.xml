<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- BaseToolbar Title text appearance using Material 3. -->
    <style name="TextAppearance.Widget.BaseToolbar.Title" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- BaseToolbar Subtitle text appearance using Material 3. -->
    <style name="TextAppearance.Widget.BaseToolbar.Subtitle" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
    </style>





    <!--
     BaseDialog Title Panel materialAlertDialogTitlePanelStyle.
     Using Material 3 dialog styles
    -->
    <style name="BaseDialog.Title.Panel" parent="@style/MaterialAlertDialog.Material3.Title.Panel">
        <!-- Title background. -->
        <item name="android:background">@color/red_400</item>

        <!-- Center Title. -->
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>


    <!--
     BaseDialog Message Text Light materialAlertDialogBodyTextStyle.
     Using Material 3 dialog body text styles
    -->
    <style name="BaseDialog.Message.Text.Light" parent="@style/MaterialAlertDialog.Material3.Body.Text">
        <!-- Text color. -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorLink">@color/blue_link_light</item>
    </style>

    <!--
     BaseDialog Message Text Dark materialAlertDialogBodyTextStyle.
     Using Material 3 dialog body text styles
    -->
    <style name="BaseDialog.Message.Text.Dark" parent="@style/MaterialAlertDialog.Material3.Body.Text">
        <!-- Text color. -->
        <item name="android:textColorLink">@color/blue_link_light</item>
    </style>





    <!-- ViewDivider style using Material 3. -->
    <style name="ViewDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:background">?attr/colorOutlineVariant</item>
    </style>

</resources>
